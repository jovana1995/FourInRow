<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/windmill"
    tools:context="com.example.aleksandra.a4inrow.ui.activities.HomeActivity">

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/profile"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>


    <Button
        android:id="@+id/btn_play"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_profile"
        android:layout_alignLeft="@+id/btn_profile"
        android:layout_alignStart="@+id/btn_profile"
        android:layout_marginBottom="30dp"
        android:text="@string/play"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:id="@+id/btn_statistics"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_profile"
        android:layout_alignStart="@+id/btn_profile"
        android:layout_below="@+id/btn_profile"
        android:layout_marginTop="30dp"
        android:text="@string/statistics"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>
</RelativeLayout>
